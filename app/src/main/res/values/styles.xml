<resources>
    <style name="list_item_button">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="item_name">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">27sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="num_names">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@color/app_blue</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="tabs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/app_color</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/accent_green</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextColor">@color/half_white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="empty_state_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="voice_input_icon">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginEnd">55dp</item>
        <item name="android:layout_marginRight">55dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:text">@string/voice_icon</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="speech_dialog_animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_from_top</item>
    </style>

    <style name="search_icon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="rng_page_container">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="number_input_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/edittext_border_normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="input_prefix_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="action_icon">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32dp</item>
    </style>

    <style name="action_item">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="checkbox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">-6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="page_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="numeric_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/app_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="rounded_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="rounded_generate_button" parent="rounded_button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="quick_option_button" parent="rounded_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
